<div id="footer-placeholder"></div>

<script>
    document.addEventListener('DOMContentLoaded', function() {

        // DOM Elemente frühzeitig referenzieren
        const headerPlaceholder = document.getElementById('header-placeholder');
        const footerPlaceholder = document.getElementById('footer-placeholder');
        const newsContainer = document.getElementById('news-container');
        const newsModal = document.getElementById('news-modal');
        const modalHeader = document.getElementById('modal-header');
        const modalBody = document.getElementById('modal-body');
        const modalClose = document.getElementById('modal-close');

        // --- Smooth Scrolling ---
        function customSmoothScroll(targetElement, duration = 800) {
            const header = document.querySelector('header');
            let headerOffset = 70; // Standard-Offset
            if (header) {
                headerOffset = header.classList.contains('scrolled') ? header.offsetHeight + 15 : 70; // Offset leicht angepasst
            }
            const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset - headerOffset;
            const startPosition = window.pageYOffset;
            const distance = targetPosition - startPosition;
            let startTime = null;

            // Easing Funktion (Quadratisch Ease-Out)
            function easeInOutQuad(t, b, c, d) { t /= d / 2; if (t < 1) return c / 2 * t * t + b; t--; return -c / 2 * (t * (t - 2) - 1) + b; }

            function animation(currentTime) {
                if (startTime === null) startTime = currentTime;
                const timeElapsed = currentTime - startTime;
                const run = easeInOutQuad(timeElapsed, startPosition, distance, duration);
                window.scrollTo(0, run);
                if (timeElapsed < duration) requestAnimationFrame(animation);
            }
            requestAnimationFrame(animation);
        }

        // Smooth Scroll Listener für Links im Hauptinhalt anhängen
        function attachPageSmoothScrollListeners() {
             const pageSmoothScrollLinks = document.querySelectorAll('a[href^="#"]:not([href="#"]):not(.nav-links a)'); // Nav-Links ausschließen (separat behandelt)
             pageSmoothScrollLinks.forEach(link => {
                 link.addEventListener('click', function(event) {
                     const targetId = this.getAttribute('href');
                     try { // Try-catch für Robustheit des QuerySelectors
                         const targetElement = document.querySelector(targetId);
                         if (targetElement) {
                             event.preventDefault();
                             customSmoothScroll(targetElement, 800);
                         }
                     } catch (e) {
                         console.warn(`Smooth scroll Ziel nicht gefunden oder ungültiger Selektor: ${targetId}`, e);
                     }
                 });
             });
        }
        attachPageSmoothScrollListeners(); // Listener initial anhängen

        // --- Header/Footer Laden und Skript Initialisierung ---
        function initializeHeaderScripts() {
            const hamburgerMenu = document.getElementById('hamburger-menu');
            const navMenu = document.getElementById('nav-menu');
            const header = document.querySelector('header'); // Header auswählen *nachdem* er geladen wurde

            if (hamburgerMenu && navMenu) {
                hamburgerMenu.addEventListener('click', function() {
                    this.classList.toggle('active'); // 'this' für Klarheit verwenden
                    navMenu.classList.toggle('active');
                    document.body.classList.toggle('no-scroll');
                });

                const navLinks = navMenu.querySelectorAll('.nav-links a');
                navLinks.forEach(link => {
                    link.addEventListener('click', function(event) {
                         // Menü schließen, wenn aktiv
                         if (navMenu.classList.contains('active')) {
                              hamburgerMenu.classList.remove('active');
                              navMenu.classList.remove('active');
                              document.body.classList.remove('no-scroll');
                         }
                         // Smooth Scroll für interne Links handhaben
                         const targetId = this.getAttribute('href');
                         if (targetId && targetId.startsWith('#')) {
                            try {
                                const targetElement = document.querySelector(targetId);
                                if (targetElement) {
                                    event.preventDefault();
                                    // Kurz warten, damit das Menü visuell geschlossen wird, bevor gescrollt wird
                                    setTimeout(() => customSmoothScroll(targetElement, 800), 50);
                                }
                            } catch(e) {
                                console.warn(`Nav Smooth Scroll Ziel nicht gefunden oder ungültiger Selektor: ${targetId}`, e);
                            }
                         } // Sonst: Standardnavigation für externe Links zulassen
                    });
                });
            } else { console.error("Hamburger-Menü oder Navigationsmenü nach dem Laden des Headers nicht gefunden."); }

             if(header) { // Scroll-Listener nur hinzufügen, wenn Header existiert
                window.addEventListener('scroll', function() {
                    // 'scrolled'-Klasse basierend auf Scroll-Position hinzufügen/entfernen
                    header.classList.toggle('scrolled', window.scrollY > 50);
                }, { passive: true }); // Passiven Listener für Scroll-Performance verwenden
            } else { console.error("Header-Element für Scroll-Effekt nicht gefunden."); }
        } // Ende von initializeHeaderScripts

        const loadComponents = async () => {
            try {
                // Header und Footer parallel abrufen
                const [headerRes, footerRes] = await Promise.all([
                     fetch('Header.html').catch(e => { console.error('Fehler beim Abrufen von Header.html', e); return null; }), // Fetch-Fehler abfangen
                     fetch('Footer.html').catch(e => { console.error('Fehler beim Abrufen von Footer.html', e); return null; })
                ]);

                if (headerRes && headerRes.ok) {
                    const headerHtml = await headerRes.text();
                    if (headerPlaceholder) {
                        headerPlaceholder.innerHTML = headerHtml;
                        initializeHeaderScripts(); // Skripte initialisieren, NACHDEM der Header-Inhalt im DOM ist
                    } else { console.error("Header-Platzhalter nicht gefunden."); }
                } else if(headerPlaceholder) {
                     headerPlaceholder.innerHTML = "<p style='color:red; text-align:center;'>Fehler beim Laden des Headers.</p>";
                }

                if (footerRes && footerRes.ok) {
                    const footerHtml = await footerRes.text();
                    if (footerPlaceholder) {
                        footerPlaceholder.innerHTML = footerHtml;
                        // Hier bei Bedarf Footer-spezifische JS-Initialisierung hinzufügen
                    } else { console.error("Footer-Platzhalter nicht gefunden."); }
                } else if(footerPlaceholder) {
                     footerPlaceholder.innerHTML = "<p style='color:red; text-align:center;'>Fehler beim Laden des Footers.</p>";
                }

            } catch (error) { // Fehler während text() oder anderer Verarbeitung abfangen
                console.error("Fehler bei der Verarbeitung der geladenen Komponenten:", error);
                if (headerPlaceholder && !headerPlaceholder.innerHTML) headerPlaceholder.innerHTML = "<p style='color:red; text-align:center;'>Fehler beim Laden des Headers.</p>";
                if (footerPlaceholder && !footerPlaceholder.innerHTML) footerPlaceholder.innerHTML = "<p style='color:red; text-align:center;'>Fehler beim Laden des Footers.</p>";
            }
        };

        loadComponents(); // Laden ausführen

        // --- About Sektion (Diagramm/KPI) Logik ---
        const portfolioData = [ // Daten für About-Diagramm
             { name: 'STS', years: 1 }, { name: 'WPS', years: 2 }, { name: 'Qcision', years: 2 },
             { name: 'Trassl', years: 3 }, { name: 'VielfaltMenü', years: 3 }, { name: 'UST', years: 3 },
             { name: 'ISOLITE', years: 3 }, { name: 'PAL Wiping', years: 4 }, { name: 'DEMM', years: 4 },
             { name: 'Wegener', years: 4 }, { name: 'HermannKoch', years: 6 }, { name: 'Qualiform', years: 7 },
             { name: 'SCV', years: 9 }, { name: 'Rebhan', years: 9 }, { name: 'COI', years: 10 },
             { name: 'AFT', years: 14 }, { name: 'Hannemann', years: 22 }, { name: 'Horn', years: 22 },
             { name: 'Pruss', years: 25 }
        ];
        portfolioData.sort((a, b) => a.years - b.years); // Aufsteigend sortieren

        const aboutSection = document.getElementById('about'); // Sektionsziel definieren

        // Intersection Observer Setup (mit Factory-Funktion für potenzielle Wiederverwendung)
        function createObserver(callback, options = { threshold: 0.15 }) {
             return new IntersectionObserver((entries, observer) => {
                 entries.forEach(entry => {
                     if (entry.isIntersecting) {
                         callback(entry.target); // Zielelement an Callback übergeben
                         observer.unobserve(entry.target); // Beobachtung nach Auslösung aufheben
                     }
                 });
             }, options);
        }

        // Callback für About Sektion Animationen
        function startAboutSectionAnimations(target) {
            const vizCol = target.querySelector('#viz-col');
            const kpiCol = target.querySelector('#kpi-col');

            // Spalten einblenden/einschieben animieren
            if (vizCol) setTimeout(() => vizCol.classList.add('animate'), 0);
            if (kpiCol) setTimeout(() => kpiCol.classList.add('animate'), 200);

            // Diagrammerstellung und Zähler nach Verzögerungen starten
            setTimeout(() => createBarChart(target), 300);
            setTimeout(() => {
                animateCounter('years-counter', '25', '+', 1500);
                animateCounter('revenue-counter', '1.2', 'B', 1500, '€ '); // Hinweis: 'B'-Suffix wird von animateCounter behandelt
                animateCounter('companies-counter', '21', '', 1500);
                animateCounter('employees-counter', '5000', '+', 1500);
            }, 500);

            // Orbs animieren (auf die beobachtete Sektion beschränkt)
             target.querySelectorAll('.bg-orb').forEach((orb, index) => {
                let transform = '';
                if (orb.classList.contains('bg-orb-1')) transform = 'translate(100px, 50px) scale(1.1)';
                else if (orb.classList.contains('bg-orb-2')) transform = 'translate(-50px, 100px) scale(1.1)';
                else if (orb.classList.contains('bg-orb-3')) transform = 'translate(60px, -50px) scale(1.1)';
                if (transform) orb.style.transform = transform;
            });
        }

        // Balkendiagramm Erstellung
        function createBarChart(sectionElement) {
            const chartContainer = sectionElement.querySelector('#years-chart'); // Query auf Sektion beschränken
            if (!chartContainer) { console.error("Diagramm-Container #years-chart in #about nicht gefunden."); return; }
            chartContainer.innerHTML = ''; // Vorherige Balken löschen
            const maxYears = Math.max(...portfolioData.map(c => c.years), 25);

            portfolioData.forEach((company, index) => {
                const barGroup = document.createElement('div'); barGroup.className = 'bar-group';
                const bar = document.createElement('div'); bar.className = 'bar'; bar.style.height = '0%';
                const barTooltip = document.createElement('div'); barTooltip.className = 'bar-tooltip';
                barTooltip.innerHTML = `${company.name}: <span class="bar-tooltip-value">${company.years} ${company.years === 1 ? 'Jahr' : 'Jahre'}</span>`; // Text angepasst

                barGroup.appendChild(bar);
                barGroup.appendChild(barTooltip);
                chartContainer.appendChild(barGroup);

                // Gestaffelte Balkenhöhenanimation
                setTimeout(() => {
                     const heightPercentage = Math.max(1, (company.years / maxYears) * 100);
                    bar.style.height = `${heightPercentage}%`;
                }, 300 + (index * 35)); // Etwas schnellere Staffelung
            });
        }

        // Zähler Animation (Verbesserte Präzision und Formatierung)
        function animateCounter(id, targetValueStr, suffix = '', duration = 1500, prefix = '') {
             const element = document.getElementById(id);
             if (!element) { console.warn(`Zähler-Element #${id} nicht gefunden.`); return; }

             // Numerischen Zielwert extrahieren und potenzielle Suffixe wie 'B', '+' behandeln
             let actualSuffix = suffix;
             let targetStrClean = targetValueStr.toString();
             if (targetStrClean.endsWith('+')) {
                 actualSuffix = '+';
                 targetStrClean = targetStrClean.slice(0, -1);
             } else if (targetStrClean.endsWith('B')) {
                 actualSuffix = 'B';
                 targetStrClean = targetStrClean.slice(0, -1);
             }
             const target = parseFloat(targetStrClean.replace(/,/g, '.')); // Kommas durch Punkte ersetzen für parseFloat

             // Startwert sicher ermitteln
             let startValue = 0;
             const currentText = element.textContent || '0';
             // Aktuellen numerischen Teil extrahieren (robust gegen Präfixe, Suffixe, Tausendertrennzeichen)
             const currentNumericPart = currentText.replace(prefix, '').replace(actualSuffix, '').replace(/[^\d.,-]/g, '').replace(/\./g, '').replace(/,/g, '.');
             if (!isNaN(parseFloat(currentNumericPart))) {
                 startValue = parseFloat(currentNumericPart);
             }

             if (isNaN(target)) {
                 console.warn(`Ungültiger Zielwert für Zähler ${id}: ${targetValueStr}`);
                 element.textContent = prefix + targetValueStr.toString() + suffix; // Ursprünglichen Zielwert anzeigen, wenn ungültig
                 return;
              }

             const diff = target - startValue;
             // Prüfen, ob schon am Ziel (mit kleiner Toleranz für Fließkommafehler)
             if (Math.abs(diff) < 0.001 && element.textContent === prefix + targetValueStr.toString().replace('.',',') + actualSuffix) {
                 return; // Bereits am Ziel, keine Animation nötig
             }

             let startTime = null;
             const isDecimal = target % 1 !== 0 || targetStrClean.includes('.');
             const decimalPlaces = isDecimal ? (targetStrClean.split('.')[1] || '').length : 0;

             function step(currentTime) {
                 if (startTime === null) startTime = currentTime;
                 const elapsed = currentTime - startTime;
                 const progress = Math.min(elapsed / duration, 1);
                 const easeProgress = progress * (2 - progress); // ease-out quadratic
                 let currentValue = startValue + diff * easeProgress;
                 let displayValue;

                 // Formatierung für deutsche Lokalisierung (Komma als Dezimaltrennzeichen)
                 if (isDecimal) {
                     displayValue = currentValue.toLocaleString('de-DE', { minimumFractionDigits: decimalPlaces, maximumFractionDigits: decimalPlaces });
                 } else {
                     displayValue = Math.round(currentValue).toLocaleString('de-DE');
                 }

                 element.textContent = prefix + displayValue + actualSuffix;

                 if (progress < 1) {
                     requestAnimationFrame(step);
                 } else {
                     // Sicherstellen, dass der Endwert exakt und korrekt formatiert ist
                      let finalTargetDisplay = target.toLocaleString('de-DE', { minimumFractionDigits: decimalPlaces, maximumFractionDigits: decimalPlaces });
                      element.textContent = prefix + finalTargetDisplay + actualSuffix;
                 }
             }
             requestAnimationFrame(step);
         }

        // Observer an About-Sektion anhängen
        if (aboutSection) {
            const aboutObserver = createObserver(startAboutSectionAnimations);
            aboutObserver.observe(aboutSection);
        } else {
            console.error("About-Sektion (#about) für Intersection Observer nicht gefunden.");
        }
        // --- ENDE: About Sektion Logik ---


        // --- Investmentkriterien Animation Logik ---
        const criteriaSection = document.getElementById('investment-criteria'); // Sektionsziel definieren

        function startCriteriaAnimations(target) {
             // Inhaltsspalten animieren
             const criteriaCol = target.querySelector('#criteria-col');
             const orbitalCol = target.querySelector('#orbital-col');
             if(criteriaCol) setTimeout(() => criteriaCol.classList.add('animate'), 200);
             if(orbitalCol) setTimeout(() => orbitalCol.classList.add('animate'), 400);

             // Orbitale Elemente animieren (auf Ziel beschränkt)
             const orbitalCenter = target.querySelector('#orbital-center');
             const rings = target.querySelectorAll('.orbital-ring');
             const particlesContainer = target.querySelector('#orbital-particles');
             const orbitingLabelsContainer = target.querySelector('#orbiting-labels');

             if(orbitalCenter) setTimeout(() => orbitalCenter.classList.add('animate'), 600);
             rings.forEach((ring, index) => {
                 setTimeout(() => ring.classList.add('animate'), 800 + index * 200);
             });

             // Orbitale Partikel erstellen und animieren
             if (particlesContainer) {
                 particlesContainer.innerHTML = ''; // Vorherige löschen
                 const particleSizes = [5, 6, 7, 8]; // Etwas kleiner
                 for (let i = 0; i < 20; i++) { // Weniger Partikel
                     const orbitIndex = i % 3;
                     let animationName = `orbit-${orbitIndex + 1}`; // orbit-1, orbit-2, orbit-3
                     const particle = document.createElement('div');
                     particle.className = 'orbital-particle';
                     particle.style.width = particle.style.height = `${particleSizes[Math.floor(Math.random() * particleSizes.length)]}px`;
                     const opacity = 0.6 + (Math.random() * 0.4);
                     particle.style.backgroundColor = `rgba(71, 84, 106, ${opacity})`; // --secondary RGB verwenden
                     particle.style.opacity = '0';
                     const durationVariance = Math.random() * 6 - 3; // +/- 3s Varianz
                     let baseDuration = 28; // Basisdauer
                     if (animationName === 'orbit-1') baseDuration = 22;
                     if (animationName === 'orbit-3') baseDuration = 34;
                     particle.style.animation = `${animationName} ${baseDuration + durationVariance}s linear infinite`;
                     particle.style.animationDelay = `${i * 0.18}s`; // Start staffeln
                     particlesContainer.appendChild(particle);
                     setTimeout(() => particle.style.opacity = opacity, 1400 + (i * 45)); // Einblenden staffeln
                 }
             } else { console.error("Partikel-Container #orbital-particles in #investment-criteria nicht gefunden."); }

             // Orbitierende Labels erstellen
             if (orbitingLabelsContainer) {
                orbitingLabelsContainer.innerHTML = ''; // Vorherige löschen
                 const labels = [
                     { text: 'Carve-outs', icon: 'fa-puzzle-piece', animationName: 'orbit-label-1' },
                     { text: 'Turnarounds', icon: 'fa-sync', animationName: 'orbit-label-2' },
                     { text: 'Succession', icon: 'fa-people-arrows', animationName: 'orbit-label-3' }, // Angepasster Text
                     { text: 'Restructuring', icon: 'fa-tools', animationName: 'orbit-label-4' } // Angepasster Text
                 ];
                 labels.forEach((label, index) => {
                     const labelContainer = document.createElement('div');
                     labelContainer.className = 'orbital-label-container';
                     labelContainer.style.animation = `${label.animationName} 120s linear infinite`; // Sicherstellen, dass Animationsname mit CSS übereinstimmt
                     labelContainer.style.transitionDelay = `${2000 + (index * 200)}ms`;
                     labelContainer.innerHTML = `
                         <div class="orbital-icon"><i class="fas ${label.icon}"></i></div>
                         <div class="orbital-label">${label.text}</div>
                     `;
                     orbitingLabelsContainer.appendChild(labelContainer);
                     setTimeout(() => labelContainer.classList.add('animate'), 2000 + (index * 200)); // Einblenden staffeln
                 });
             } else { console.error("Label-Container #orbiting-labels in #investment-criteria nicht gefunden."); }

            // Hintergrund-Orbs animieren (auf Ziel beschränkt)
            target.querySelectorAll('.bg-orb').forEach(orb => {
                 let transform = '';
                 if (orb.classList.contains('bg-orb-1')) transform = 'translate(80px, 40px) scale(1.1)';
                 else if (orb.classList.contains('bg-orb-2')) transform = 'translate(-40px, 80px) scale(1.05)';
                 else if (orb.classList.contains('bg-orb-3')) transform = 'translate(50px, -30px) scale(1.15)';
                 if (transform) orb.style.transform = transform;
             });
        }

        // Observer an Investmentkriterien-Sektion anhängen
        if (criteriaSection) {
            const criteriaObserver = createObserver(startCriteriaAnimations, { threshold: 0.2 });
            criteriaObserver.observe(criteriaSection);
        } else {
             console.error("Investmentkriterien-Sektion (#investment-criteria) für Intersection Observer nicht gefunden.");
        }
        // --- ENDE: Investmentkriterien Logik ---


        // --- Partner Logo Slider ---
        function setupLogoSlider() {
            const logoTrack = document.querySelector('.logos-track');
            if (!logoTrack) { console.error("'.logos-track'-Element nicht gefunden."); return; }

            const portfolioCompanies = [ // Diese Liste aktuell halten
                'AFT', 'COI', 'Demm', 'Enorise', 'Hannemann', 'Shieldtech',
                'HermannKoch', 'Horn', 'Isolite', 'PAL', 'Pruss', 'Qcision',
                'Qualiform', 'Rebhan', 'SCV', 'Trassl', 'UST', 'Vielfaltmenue',
                'wegener', 'WPS', 'MOBOTIX'
            ];
            logoTrack.innerHTML = ''; // Zuerst leeren

            const addLogo = (path, companyName) => {
                const img = document.createElement('img');
                img.src = path;
                img.alt = `${companyName} Logo`;
                img.loading = 'lazy'; // Lazy Loading hinzufügen
                img.onerror = () => { img.style.display='none'; console.warn(`Logo konnte nicht geladen werden: ${path}`); }; // Ausblenden und Fehler protokollieren
                logoTrack.appendChild(img);
            };

            // Logopfade erstellen und zweimal hinzufügen für Looping-Effekt
            const logoPaths = portfolioCompanies.map(company => `../Assets/Portfolio/${company}/${company}_Logo.png`);
            logoPaths.forEach(path => addLogo(path, path.split('/')[3]));
            logoPaths.forEach(path => addLogo(path, path.split('/')[3])); // Zweiten Satz für nahtlosen Loop hinzufügen
        }
        setupLogoSlider();


        // --- News Laden & Modal Logik ---
        const newsFolders = [ // News-Quellen definieren
            '../Assets/News/News Aktuell 1',
            '../Assets/News/News Aktuell 2',
            '../Assets/News/News Aktuell 3'
            // Hier bei Bedarf weitere Ordner hinzufügen
        ];

        function openNewsModal(title, text, imagePath) {
            if (!newsModal || !modalHeader || !modalBody) { console.error("Modal-Elemente nicht gefunden."); return; }
            // Bild setzen oder leeren, wenn keines vorhanden
            modalHeader.innerHTML = imagePath ? `<img src="${imagePath}" alt="${title.substring(0, 50)}" loading="lazy">` : ''; // Substring im Alt-Text verwenden
            // Text für Anzeige formatieren (Zeilenumbrüche behandeln)
            const formattedText = text
                                    .replace(/(\r\n|\n|\r){2,}/g, '<br style="margin-bottom: 0.8em;">') // Absatzumbrüche
                                    .replace(/(\r\n|\n|\r)/g, '<br>'); // Einzelne Zeilenumbrüche
            modalBody.innerHTML = `
                <h2 class="news-modal-title">${title}</h2>
                <div class="news-modal-text">${formattedText}</div>
            `;
            newsModal.classList.add('active');
            document.body.classList.add('no-scroll');
        }

        function closeNewsModal() {
            if (!newsModal) return;
            newsModal.classList.remove('active');
            document.body.classList.remove('no-scroll');
        }

        async function loadNews() {
            if (!newsContainer) { console.error('News-Container (#news-container) nicht gefunden.'); return; }
            if (newsFolders.length === 0) {
                newsContainer.innerHTML = '<p class="news-message">Keine News-Ordner definiert.</p>'; return;
            }

            try {
                const newsItemPromises = newsFolders.map(async (folder) => {
                    const articlePath = `${folder}/Article.txt`;
                    const imagePath = `${folder}/Image.jpg`; // Annahme JPG zur Vereinfachung

                    try {
                        const response = await fetch(articlePath);
                        if (!response.ok) throw new Error(`HTTP Fehler ${response.status}`);
                        // Explizit als UTF-8 lesen
                         const buffer = await response.arrayBuffer();
                         const text = new TextDecoder('utf-8').decode(buffer);

                        // Titel und Text extrahieren
                        const titleMatch = text.match(/\[TITLE\]([\s\S]*?)\[TEXT\]/);
                        const textMatch = text.match(/\[TEXT\]([\s\S]*)/);
                        const title = titleMatch ? titleMatch[1].trim() : 'Ohne Titel';
                        const body = textMatch ? textMatch[1].trim() : 'Inhalt nicht gefunden.';

                        // Bildpfad zurückgeben (Annahme: Bild existiert)
                        return { title, body, imagePath: imagePath, hasError: false };
                    } catch (error) {
                        console.error(`Fehler bei der Verarbeitung des Ordners ${folder}:`, error);
                        return {
                            title: "Fehler beim Laden der News",
                            body: `Artikel konnte nicht geladen werden. (${folder.split('/').pop()})`,
                            imagePath: '',
                            hasError: true
                         };
                    }
                });

                const newsItems = await Promise.all(newsItemPromises);
                newsContainer.innerHTML = ''; // "Lade..." löschen

                if (newsItems.every(item => item.hasError)) {
                    newsContainer.innerHTML = '<p class="news-message error-message">Keine News-Elemente konnten geladen werden.</p>'; return;
                }

                newsItems.forEach(item => {
                    const card = document.createElement('div');
                    card.className = 'news-card';
                    if (item.hasError) card.classList.add('news-card-error');

                    card.innerHTML = `
                        <div class="news-image">
                            ${item.imagePath && !item.hasError ? `<img src="${item.imagePath}" alt="${item.title.substring(0,50)}" loading="lazy">` : '<div class="image-placeholder"><i class="fas fa-image"></i></div>'}
                        </div>
                        <div class="news-content">
                            <h3 class="news-title">${item.title}</h3>
                            ${item.hasError ? `<p class="error-message">${item.body}</p>` : ''}
                        </div>
                    `;
                    // Klick-Listener nur hinzufügen, wenn kein Fehler vorliegt
                    if (!item.hasError) {
                        card.addEventListener('click', () => openNewsModal(item.title, item.body, item.imagePath));
                    }
                    newsContainer.appendChild(card);
                });

            } catch (error) {
                console.error("Allgemeiner Fehler beim Laden der News-Elemente:", error);
                newsContainer.innerHTML = '<p class="news-message error-message">Fehler beim Laden der News-Sektion.</p>';
            }
        }

        loadNews(); // News beim Laden der Seite laden

        // Modal Schließen Event Listener
        if (modalClose) { modalClose.addEventListener('click', closeNewsModal); }
        if (newsModal) {
            newsModal.addEventListener('click', e => { if (e.target === newsModal) closeNewsModal(); }); // Klick auf Hintergrund
        }
        document.addEventListener('keydown', e => {
            if (e.key === 'Escape' && newsModal && newsModal.classList.contains('active')) closeNewsModal(); // Escape-Taste
        });
        // --- ENDE: News Logik ---

    }); // Ende des Haupt-DOMContentLoaded-Listeners
</script>

</body>
</html>
